<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainScreen">

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="408dp"
        android:layout_height="167dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/listDistance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/listDistance"
        android:layout_width="133dp"
        android:layout_height="48dp"
        android:text="List"
        app:layout_constraintEnd_toStartOf="@+id/listRecommended"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapView" />

    <Button
        android:id="@+id/listRecommended"
        android:layout_width="132dp"
        android:layout_height="48dp"
        android:text="Bars Recomm."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapView" />

    <Button
        android:id="@+id/listRated"
        android:layout_width="130dp"
        android:layout_height="48dp"
        android:text="Best Bewert."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/listRecommended"
        app:layout_constraintTop_toBottomOf="@+id/mapView" />
</android.support.constraint.ConstraintLayout>